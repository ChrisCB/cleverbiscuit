$font-colour: #333;


*{
		background:#fff; 
		font-family: Gill Sans std, helvetica, arial;
		color: $font-colour;
		font-weight:200;

}
#container
{
	margin: 0 auto;
	width: 780px;
	background:#d5dae0;
	text-align:center;
	
	
}

a {text-decoration:none;}

a:hover {text-decoration:underline;}

.bodyLink {color:#386085;}

#navigation
{

	width: 780px;
	float:left;
	padding-left: 52px;
}

#navigation ul
{
	margin: 0;
	padding: 0;
}

#navigation ul li
{
	list-style-type: none;
	display: inline;
}

#navigation li a {
display: block;
text-decoration: none;
float: left;
padding-left: 30px;
padding-right: 30px;
margin-left: 12px;
}

#navigation li a:hover {
	text-decoration:underline;

}

#content {
clear: left;
padding: 30px;
height: 100%;
padding-top: 10px;
float: left;
width: 780px;
}


#content p {
	text-align:left;
}

#content h2 {
	text-align:left;
}


#content-hp
{
	clear: left;
	padding: 30px;
	background-image:url(/images/clever-biscuit-gang.jpg);
	background-repeat:no-repeat;
	background-position:center 50px;
	height:320px;
	padding-top: 280px;
	float:left;
	width:780px;
}

#content-hp h1 {
	margin-bottom: -5px;	
}

#person {
	padding-top: 30px;
	width: 750px;
	float: right;
}

#Mae h2 {
	text-align:right;
}
	

#ChrisPic {
	float:left;
	width:160px;
	clear: both;
}

#MaePic {
	float:right;
	width:160px;
}

.title {
	font-weight:200;
	font-size:90px;
}

#content h2
{
	color:#000;
	font-size: 160%;
	margin: 0 0 .5em;
}

#footer
{
	text-align: center;
	float:left;
	padding: 20px;
	height: 1%;
	width:100%;
}	


//Mobile test

@media only screen and (max-width: 325px) {
	
	#container {
		margin: 5px;
		width: 295px;
		color: red;
	}
	
	#navigation {
		width: inherit;
		padding-left: 0px;
		
	}
	
	#navigation li a {	
		float: none;
		margin: 10px;
		background-color: lighten($font-colour, 80);
		padding: 5px;
	}
	
	.selected a {
		background-color: lighten($font-colour, 60) !important;
	}


	.title {
		font-size:2em;
	}

	#content-hp{
		padding: 175px 0px 0px 0px;		
		width:100%;
		height: auto;
		background-image:url(/images/clever-biscuit-gang-320.png);
		background-repeat:no-repeat;
			
	}
	
	
	#content {
		clear: left;
		padding: 1px;
		height: 100%;
		padding-top: 10px;
		float: left;
		width: 100%;
	}
	
	
	#footer {
		text-align: center;
		float:left;
		padding: 0px;
		height: 1%;
		width:100%;
	}	


	#person {
		padding-top: 30px;
		width: 100%;
		float: right;
	}


	#ChrisPic {
		float:none;
		margin: 0 auto;
	}

	#MaePic {
		float:none;
		margin: 0 auto;
	}
	




}